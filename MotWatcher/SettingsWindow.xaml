<Window x:Class="MotWatcher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MotWatcher Settings"
        Height="600"
        Width="800"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False">
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin"
                    Value="0,0,0,10"/>
            <Setter Property="Padding"
                    Value="10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="MinWidth"
                    Value="80"/>
            <Setter Property="Padding"
                    Value="8,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- General Settings -->
        <GroupBox Grid.Row="0"
                  Header="General Settings">
            <StackPanel>
                <CheckBox x:Name="AutoStartCheckBox"
                          Content="Start MotWatcher when Windows starts"
                          Margin="0,0,0,8"/>
                <CheckBox x:Name="StartWatchingOnLaunchCheckBox"
                          Content="Start watching automatically on launch"
                          Margin="0,0,0,8"/>
                <CheckBox x:Name="NotifyOnProcessCheckBox"
                          Content="Show balloon notifications when files are processed"
                          Margin="0,0,0,12"/>

                <Label Content="Debounce Delay (seconds):"
                       Margin="0,0,0,4"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="DebounceSlider"
                            Minimum="0.5"
                            Maximum="10"
                            TickFrequency="0.5"
                            IsSnapToTickEnabled="True"
                            ValueChanged="DebounceSlider_ValueChanged"
                            Margin="0,0,10,0"/>
                    <TextBlock x:Name="DebounceValueText"
                               Grid.Column="1"
                               Text="2.0s"
                               VerticalAlignment="Center"
                               MinWidth="40"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- Watched Directories -->
        <GroupBox Grid.Row="1"
                  Header="Watched Directories">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Directory List -->
                <DataGrid x:Name="DirectoriesGrid"
                          Grid.Row="0"
                          Grid.Column="0"
                          AutoGenerateColumns="False"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          SelectionChanged="DirectoriesGrid_SelectionChanged"
                          Margin="0,0,10,0">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Enabled"
                                                Binding="{Binding Enabled}"
                                                Width="60"/>
                        <DataGridTextColumn Header="Path"
                                            Binding="{Binding Path}"
                                            Width="*"
                                            IsReadOnly="True"/>
                        <DataGridCheckBoxColumn Header="Recursive"
                                                Binding="{Binding IncludeSubdirectories}"
                                                Width="80"/>
                        <DataGridTextColumn Header="Zone â‰¥"
                                            Binding="{Binding MinZoneId}"
                                            Width="60"
                                            IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Buttons -->
                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Top">
                    <Button Content="Add..."
                            Click="AddDirectory_Click"
                            Margin="0,0,0,5"/>
                    <Button x:Name="EditDirectoryButton"
                            Content="Edit..."
                            Click="EditDirectory_Click"
                            IsEnabled="False"
                            Margin="0,0,0,5"/>
                    <Button x:Name="RemoveDirectoryButton"
                            Content="Remove"
                            Click="RemoveDirectory_Click"
                            IsEnabled="False"/>
                </StackPanel>

                <!-- File Type Filters -->
                <GroupBox Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Header="File Type Filters for Selected Directory"
                          Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ListBox x:Name="FileTypesList"
                                 Height="100"
                                 SelectionChanged="FileTypesList_SelectionChanged"
                                 Margin="0,0,10,0"/>

                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Top">
                            <Button x:Name="AddFileTypeButton"
                                    Content="Add..."
                                    Click="AddFileType_Click"
                                    IsEnabled="False"
                                    Margin="0,0,0,5"/>
                            <Button x:Name="RemoveFileTypeButton"
                                    Content="Remove"
                                    Click="RemoveFileType_Click"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Save"
                    Click="Save_Click"
                    IsDefault="True"
                    Margin="0,0,5,0"/>
            <Button Content="Cancel"
                    Click="Cancel_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
